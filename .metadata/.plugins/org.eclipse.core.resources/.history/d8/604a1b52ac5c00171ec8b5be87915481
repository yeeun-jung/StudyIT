			<td width="50%" align="center">Key</td>
			<td align="center"><input type="text" id="search_key" size="35"></td>
		</tr>
		<tr>
			<td colspan="2" align="right"><input type="button" value="寃��깋" id="search">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
		</tr>
